; top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{php,tpl}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[{Makefile,makefile,**.mk}]
indent_style = tab
indent_size = 4
