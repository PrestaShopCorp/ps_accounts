{
  "name": "account.tests",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build-shop": "cd ../e2e-env && ./shop-build.sh",
    "kill-shop": "cd ../e2e-env && docker compose --profile all down -v",
    "installation-tests": "./scripts/run-installation-tests.sh",
    "association-diassociaiton-tests": "./scripts/run-association-diassociation-tests.sh",
    "multistore-association-diassociation-tests": "./scripts/run-multistore-association-diassociation-tests.sh",
    "upgrade-tests": "./scripts/run-upgrade-tests.sh",
    "merge-allure-results": "rm -rf allure-results && mkdir allure-results && for dir in allure-results-*; do cp -r \"$dir\"/* allure-results/; done && rm -rf allure-results-*",
    "generate-allure-report": "allure generate allure-results --clean -o allure-report",
    "clean-test-results": "rm -rf allure-report allure-results allure-results-* test-results playwright-report",
    "tnr": "./scripts/run-tnr.sh"
  },
  "dependencies": {
    "@playwright/test": "^1.55.0",
    "dotenv": "^16.6.1",
    "mysql2": "^3.14.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@types/node": "^24.3.0",
    "jiti": "^2.5.1",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-unused-imports": "^4.2.0",
    "typescript-eslint": "^8.42.0",
    "allure-commandline": "^2.27.0",
    "allure-playwright": "^3.0.5",
    "playwright-ctrf-json-reporter": "^0.0.23",
    "prettier": "^3.6.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.9.2"
  }
}
